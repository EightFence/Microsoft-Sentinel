{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/A22B2ECF-1478-4400-877E-07A32E53A897')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/A22B2ECF-1478-4400-877E-07A32E53A897')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "name": "Removable storage ONLINE event from secRMM",
        "alertRuleTemplateName": null,
        "groupingConfiguration": {
          "enabled": false,
          "lookbackDuration": "PT5H",
          "groupByEntities": [],
          "groupByAlertDetails": [],
          "groupByCustomDetails": [],
          "matchingMethod": "AllEntities",
          "reopenClosedIncident": false
        },
        "subTechniques": [],
        "eventGroupingSettings": null,
        "severity": "High",
        "incidentConfiguration": null,
        "alertDetailsOverride": null,
        "aggregationKind": "AlertPerResult",
        "displayName": "Removable Storage ONLINE",
        "tactics": [
          "Collection"
        ],
        "enabled": true,
        "description": "Detect when a removable storage device is plugged in by the end-user.",
        "entityMappings": [
          {
            "fieldMappings": [
              {
                "identifier": "AadUserId",
                "columnName": "User_s"
              }
            ],
            "entityType": "Account"
          },
          {
            "fieldMappings": [
              {
                "identifier": "HostName",
                "columnName": "Computer"
              }
            ],
            "entityType": "Host"
          }
        ],
        "suppressionDuration": "PT5H",
        "suppressionEnabled": false,
        "query": "secRMM_CL | where Event_s == \"ONLINE\" | \nextend AccountCustomEntity = User_s |\nextend HostCustomEntity = Computer\n",
        "apiVersion": "2025-09-01",
        "createIncident": true,
        "customDetails": null
      }
    }
  ]
}
