{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/4d9d00b9-31a6-49e4-88c1-9e68277053ad')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/4d9d00b9-31a6-49e4-88c1-9e68277053ad')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "description": "'Detects XSS probing patterns.'\n",
        "severity": "Medium",
        "status": "Available",
        "tactics": [
          "InitialAccess"
        ],
        "triggerOperator": "gt",
        "queryFrequency": "1h",
        "name": "Cloudflare - XSS probing pattern in request",
        "entityMappings": [
          {
            "fieldMappings": [
              {
                "columnName": "SrcIpAddr",
                "identifier": "Address"
              }
            ],
            "entityType": "IP"
          },
          {
            "fieldMappings": [
              {
                "columnName": "CompleteUrl",
                "identifier": "Url"
              }
            ],
            "entityType": "URL"
          }
        ],
        "queryPeriod": "1h",
        "triggerThreshold": 0,
        "query": "let s_threshold = 3;\nCloudflare\n| where HttpRequestMethod in~ ('POST', 'PUT')\n| extend susp_ch = countof(ClientRequestURI, '%00')\n| where ClientRequestURI matches regex @'(alert\\()|(alert\\%28)|(String\\.fromCharCode\\()|(expression\\(alert)' or susp_ch > s_threshold \n| extend CompleteUrl = strcat(HttpRequestHeaderHost,ClientRequestPath)\n"
      }
    }
  ]
}
