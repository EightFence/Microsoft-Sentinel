{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/e9ef6adb-6fa3-49ff-b105-c4cbd4f37808')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/e9ef6adb-6fa3-49ff-b105-c4cbd4f37808')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "queryPeriod": "1h",
        "name": "BloodHound Attack Path Finding - Computers Vulnerable to Coercion-Based NTLM Relay to SMB Attack",
        "triggerOperator": "gt",
        "entityMappings": [
          {
            "fieldMappings": [
              {
                "columnName": "domain_name",
                "identifier": "Url"
              }
            ],
            "entityType": "URL"
          }
        ],
        "description": "BloodHound Attack Path Finding - Computers Vulnerable to Coercion-Based NTLM Relay to SMB Attack",
        "triggerThreshold": 0,
        "customDetails": {
          "Description": "ShortDescription",
          "Remediation": "ShortRemediation"
        },
        "queryFrequency": "1h",
        "tactics": [],
        "status": "Available",
        "query": "BHEAttackPathsData_CL \n| where Finding == \"LargeDefaultGroupsCoerceAndRelayNTLMToSMB\"",
        "severity": "Medium"
      }
    }
  ]
}
