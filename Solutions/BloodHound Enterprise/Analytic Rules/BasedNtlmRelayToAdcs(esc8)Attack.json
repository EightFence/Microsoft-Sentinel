{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/28b86df8-daa1-4b94-939b-903c24d8196d')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/28b86df8-daa1-4b94-939b-903c24d8196d')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "tactics": [],
        "status": "Available",
        "triggerThreshold": 0,
        "severity": "Medium",
        "description": "BloodHound Attack Path Finding - Tier Zero Computer Vulnerable to Coercion-Based NTLM Relay to ADCS (ESC8) Attack",
        "queryPeriod": "1h",
        "customDetails": {
          "Description": "ShortDescription",
          "Remediation": "ShortRemediation"
        },
        "name": "BloodHound Attack Path Finding - Tier Zero Computer Vulnerable to Coercion-Based NTLM Relay to ADCS (ESC8) Attack",
        "triggerOperator": "gt",
        "query": "BHEAttackPathsData_CL | where Finding == \"T0CoerceAndRelayNTLMToADCS\"",
        "entityMappings": [
          {
            "fieldMappings": [
              {
                "columnName": "domain_name",
                "identifier": "Url"
              }
            ],
            "entityType": "URL"
          }
        ],
        "queryFrequency": "1h"
      }
    }
  ]
}
