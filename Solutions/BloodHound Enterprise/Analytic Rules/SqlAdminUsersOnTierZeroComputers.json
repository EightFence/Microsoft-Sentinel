{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/b3c6f684-5fb3-451d-b1d9-fec8089c2503')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/b3c6f684-5fb3-451d-b1d9-fec8089c2503')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "severity": "Medium",
        "description": "BloodHound Attack Path Finding - SQL Admin Users on Tier Zero Computers",
        "triggerOperator": "gt",
        "triggerThreshold": 0,
        "queryFrequency": "1h",
        "entityMappings": [
          {
            "fieldMappings": [
              {
                "identifier": "Url",
                "columnName": "domain_name"
              }
            ],
            "entityType": "URL"
          }
        ],
        "queryPeriod": "1h",
        "tactics": [],
        "customDetails": {
          "Description": "ShortDescription",
          "Remediation": "ShortRemediation"
        },
        "query": "BHEAttackPathsData_CL | where Finding == \"T0SQLAdmin\"",
        "name": "BloodHound Attack Path Finding - SQL Admin Users on Tier Zero Computers",
        "status": "Available"
      }
    }
  ]
}
