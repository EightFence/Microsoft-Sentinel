{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/d205a93f-b2e3-4708-a359-5e0c88ee3e59')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/d205a93f-b2e3-4708-a359-5e0c88ee3e59')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "enabled": true,
        "query": "Alerts_news_feed  \n| where Service == \"news_feed\" \n| extend MappedSeverity = Severity\n",
        "triggerOperator": "GreaterThan",
        "entityMappings": [
          {
            "fieldMappings": [
              {
                "columnName": "NF_PostURL",
                "identifier": "Url"
              }
            ],
            "entityType": "Url"
          },
          {
            "fieldMappings": [
              {
                "columnName": "KeywordName",
                "identifier": "HostName"
              }
            ],
            "entityType": "Host"
          }
        ],
        "tactics": [
          "Reconnaissance"
        ],
        "triggerThreshold": 0,
        "severity": "Low",
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "incidentConfiguration": {
          "alertDescriptionFormat": "A news article referencing the monitored keyword {{KeywordName}} was identified. Source {{NF_PostSourceName}}. URL {{NF_PostURL}}.\n",
          "createIncident": true,
          "groupingConfiguration": {
            "enabled": false,
            "matchingMethod": "AllEntities",
            "reopenClosedIncident": false,
            "lookbackDuration": "PT5H"
          },
          "alertDisplayNameFormat": "Relevant Cybersecurity News {{NF_PostTitle}}",
          "alertDetailsOverride": null
        },
        "name": "Cyble Vision Alerts News Feed Alert",
        "queryPeriod": "30m",
        "status": "Available",
        "description": "'Triggers when monitored keywords are found in external news feeds. Helps analysts track relevant cybersecurity news, advisories, or threat intelligence updates tied to monitored entities.'\n",
        "queryfrequency": "30m",
        "customDetails": {
          "NF_PostTitle": "NF_PostTitle",
          "MappedSeverity": "Severity",
          "Service": "Service",
          "AlertID": "AlertID",
          "NF_PostURL": "NF_PostURL",
          "NF_PostSource": "NF_PostSourceName",
          "NF_AI_Summary": "NF_AI_Summary",
          "Status": "Status"
        }
      }
    }
  ]
}
