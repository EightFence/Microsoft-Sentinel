{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/6deaf986-a25b-47b4-afbe-667901aa313b')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/6deaf986-a25b-47b4-afbe-667901aa313b')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "severity": "Low",
        "name": "Cyble Vision Alerts Darkweb Ransomware Leak",
        "description": "'A ransomware threat actor has posted victim data on the dark web. This alert includes leaked documents, threat actor name, victim organization, timestamps, and extracted text content for SOC triage.'\n",
        "triggerOperator": "GreaterThan",
        "status": "Available",
        "queryPeriod": "30m",
        "tactics": [
          "Impact",
          "Exfiltration",
          "Reconnaissance"
        ],
        "incidentConfiguration": {
          "createIncident": true,
          "groupingConfiguration": {
            "reopenClosedIncident": false,
            "matchingMethod": "AllEntities",
            "lookbackDuration": "PT5H",
            "enabled": false
          }
        },
        "queryfrequency": "30m",
        "entityMappings": [
          {
            "fieldMappings": [
              {
                "columnName": "DW_Victim_Nested",
                "identifier": "Name"
              },
              {
                "columnName": "DW_ThreatActor_Nested",
                "identifier": "FullName"
              }
            ],
            "entityType": "Account"
          }
        ],
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "query": "Alerts_darkweb_ransomware\n| where Service == \"darkweb_ransomware\"\n| extend MappedSeverity = Severity\n",
        "triggerThreshold": 0,
        "enabled": true,
        "alertDetailsOverride": {
          "alertDescriptionFormat": "A ransomware group has posted data belonging on the dark web. A document leak has been detected, including text extracted from the file.\n**Victim:** {{Victim}}\n**Threat Actor:** {{ThreatActor}}\n**Leaked File:** {{FileName}}\n",
          "alertDisplayNameFormat": "Darkweb Ransomware Leak {{Victim}} by {{ThreatActor}}"
        },
        "customDetails": {
          "OriginalFileName": "DW_OriginalFileName",
          "DocumentYear": "DW_DocumentYear",
          "AlertID": "AlertID",
          "CompanyLeak": "DW_CompanyLeak",
          "UpdatedDate": "DW_UpdatedDate_Nested",
          "ThreatActor": "DW_ThreatActor_Nested",
          "Service": "Service",
          "ContentText": "DW_Text",
          "Status": "Status",
          "MappedSeverity": "Severity",
          "Victim": "DW_Victim_Nested",
          "FileName": "DW_FileName"
        }
      }
    }
  ]
}
