{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/7a0f79cc-8d28-44b5-ac1e-6176565bb7b8')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/7a0f79cc-8d28-44b5-ac1e-6176565bb7b8')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "tactics": [
          "Reconnaissance"
        ],
        "queryfrequency": "30m",
        "queryPeriod": "30m",
        "triggerOperator": "GreaterThan",
        "enabled": true,
        "description": "'Triggers when a new subdomain is detected for a monitored keyword/domain.'\n",
        "incidentConfiguration": {
          "createIncident": true,
          "alertDisplayNameFormat": "New Subdomain Detected {{SD_Subdomain}}",
          "groupingConfiguration": {
            "enabled": false,
            "matchingMethod": "AllEntities",
            "reopenClosedIncident": false,
            "lookbackDuration": "PT5H"
          },
          "alertDetailsOverride": null,
          "alertDescriptionFormat": "A new subdomain was discovered for monitored domain/keyword. Keyword {{SD_KeywordName}} Bucket {{SD_BucketName}} Severity {{MappedSeverity}} This may represent new attack surface exposure or infrastructure expansion.\n"
        },
        "severity": "Low",
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "status": "Available",
        "query": "Alerts_subdomains  \n| where Service == \"subdomains\" \n| extend MappedSeverity = Severity\n",
        "triggerThreshold": 0,
        "name": "Cyble Vision Alerts Discovered Subdomain",
        "entityMappings": [
          {
            "fieldMappings": [
              {
                "columnName": "SD_Subdomain",
                "identifier": "DomainName"
              }
            ],
            "entityType": "DNS"
          }
        ],
        "customDetails": {
          "SD_EntityID": "EntityID",
          "Status": "Status",
          "AlertID": "AlertID",
          "Service": "Service",
          "SD_KeywordName": "KeywordName",
          "MappedSeverity": "Severity",
          "SD_BucketName": "BucketName",
          "SD_Subdomain": "SD_Subdomain"
        }
      }
    }
  ]
}
