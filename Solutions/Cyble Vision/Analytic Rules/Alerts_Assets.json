{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/0012714c-c595-4dcd-8949-4a5c1d49aaa8')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/0012714c-c595-4dcd-8949-4a5c1d49aaa8')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "triggerOperator": "GreaterThan",
        "description": "'Scheduled rule that creates incidents for asset alerts using saved parser Alerts_assets. Mandatory custom details: MappedSeverity, Status, AlertID, Service.'\n",
        "customDetails": {
          "AlertID": "AlertID",
          "Service": "Service",
          "Status": "Status",
          "AA_Value": "AA_Value",
          "AA_LastDetected": "AA_LastDetected",
          "MappedSeverity": "Severity",
          "AA_KeywordID": "AA_KeywordID"
        },
        "status": "Available",
        "queryPeriod": "30m",
        "name": "Cyble Vision Alerts Assets",
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "severity": "Low",
        "queryfrequency": "30m",
        "enabled": true,
        "tactics": [
          "Reconnaissance"
        ],
        "incidentConfiguration": {
          "createIncident": true,
          "groupingConfiguration": {
            "enabled": false,
            "reopenClosedIncident": false,
            "lookbackDuration": "PT5H",
            "matchingMethod": "AllEntities"
          }
        },
        "entityMappings": [
          {
            "fieldMappings": [
              {
                "columnName": "AA_Value",
                "identifier": "HostName"
              }
            ],
            "entityType": "Host"
          },
          {
            "fieldMappings": [
              {
                "columnName": "AA_Value",
                "identifier": "Url"
              }
            ],
            "entityType": "Url"
          }
        ],
        "triggerThreshold": 0,
        "query": "Alerts_assets\n| where Service == \"assets\"\n| extend MappedSeverity = Severity\n"
      }
    }
  ]
}
