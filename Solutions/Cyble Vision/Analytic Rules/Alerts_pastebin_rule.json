{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/dd37e041-3973-482a-aa8c-f484b4178940')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/dd37e041-3973-482a-aa8c-f484b4178940')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "name": "Cyble Vision Alerts Pastebin",
        "tactics": [
          "Reconnaissance"
        ],
        "queryPeriod": "30m",
        "triggerOperator": "GreaterThan",
        "description": "'Cyble detected a paste containing references to monitored keywords or domains. Pastebin/Gist exposure may indicate data leakage or threat actor activity referencing the organization.'\n",
        "query": "Alerts_pastebin  \n| where Service == \"pastebin\" \n| extend MappedSeverity = Severity\n",
        "customDetails": {
          "PasteAuthor": "PB_Author",
          "MappedSeverity": "Severity",
          "Service": "Service",
          "AlertID": "AlertID",
          "PasteUpdatedOn": "PB_ContentUpdatedOn",
          "Status": "Status",
          "PasteID": "PB_Data_PasteID",
          "PasteURL": "PB_Data_URL"
        },
        "entityMappings": [
          {
            "entityType": "DNS",
            "fieldMappings": [
              {
                "columnName": "MA_Domain",
                "identifier": "DomainName"
              }
            ]
          },
          {
            "entityType": "URL",
            "fieldMappings": [
              {
                "columnName": "MA_DomainURL",
                "identifier": "Url"
              }
            ]
          },
          {
            "entityType": "Account",
            "fieldMappings": [
              {
                "columnName": "KeywordName",
                "identifier": "Name"
              }
            ]
          },
          {
            "entityType": "Host",
            "fieldMappings": [
              {
                "columnName": "Domain",
                "identifier": "HostName"
              }
            ]
          }
        ],
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "status": "Available",
        "triggerThreshold": 0,
        "enabled": true,
        "severity": "Low",
        "incidentConfiguration": {
          "alertDetailsOverride": null,
          "groupingConfiguration": {
            "lookbackDuration": "PT5H",
            "reopenClosedIncident": false,
            "matchingMethod": "AllEntities",
            "enabled": false
          },
          "createIncident": true,
          "alertDisplayNameFormat": "Pastebin/Gist Exposure for Keyword {{KeywordName}}",
          "alertDescriptionFormat": "A public paste has been detected referencing monitored keyword {{KeywordName}}. Paste Author {{PB_Author}}. URL {{PB_Data_URL}}. This may indicate sensitive information exposure or monitoring by external actors.\n"
        },
        "queryfrequency": "30m"
      }
    }
  ]
}
