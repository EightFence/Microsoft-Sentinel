{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/eb1d45fe-1b19-4b54-b146-971f282a6fd9')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/eb1d45fe-1b19-4b54-b146-971f282a6fd9')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "description": "'Cyble detected a phishing website impersonating a monitored brand. This alert provides landing page, host, screenshot, status and configured keyword for SOC triage.'\n",
        "enabled": true,
        "status": "Available",
        "severity": "Low",
        "tactics": [
          "Reconnaissance"
        ],
        "triggerOperator": "GreaterThan",
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "queryfrequency": "30m",
        "name": "Cyble Vision Alerts Phishing Domain Detected",
        "incidentConfiguration": {
          "alertDetailsOverride": null,
          "alertDescriptionFormat": "A phishing landing page impersonating {{PH_Brand}}.\nHost {{PH_HostName}}\nLive {{PH_IsLive}}\n",
          "groupingConfiguration": {
            "enabled": false,
            "reopenClosedIncident": false,
            "matchingMethod": "AllEntities",
            "lookbackDuration": "PT5H"
          },
          "alertDisplayNameFormat": "Phishing Detected {{PH_PhishingKeyword}} on {{PH_DomainName}}",
          "createIncident": true
        },
        "entityMappings": [
          {
            "fieldMappings": [
              {
                "columnName": "PH_DomainName",
                "identifier": "Url"
              }
            ],
            "entityType": "Url"
          },
          {
            "fieldMappings": [
              {
                "columnName": "PH_HostName",
                "identifier": "HostName"
              }
            ],
            "entityType": "Host"
          }
        ],
        "customDetails": {
          "PH_PhishingKeyword": "PH_PhishingKeyword",
          "PH_LastLiveOn": "PH_LastLiveOn",
          "PH_PhishingStatus": "PH_PhishingStatus",
          "AlertID": "AlertID",
          "PH_HostName": "PH_HostName",
          "PH_Top_Domain": "PH_Top_Domain",
          "Status": "Status",
          "PH_ScreenshotURL": "PH_ScreenshotURL",
          "MappedSeverity": "Severity",
          "PH_Score": "PH_Score",
          "PH_DomainName": "PH_DomainName",
          "PH_IsLive": "PH_IsLive",
          "PH_Title": "PH_Title",
          "PH_AWSObjectName": "PH_AWSObjectName",
          "Service": "Service",
          "PH_DetectedAt": "PH_DetectedAt"
        },
        "queryPeriod": "30m",
        "triggerThreshold": 0,
        "query": "Alerts_phishing \n| where Service == \"phishing\"\n| extend MappedSeverity = Severity\n"
      }
    }
  ]
}
