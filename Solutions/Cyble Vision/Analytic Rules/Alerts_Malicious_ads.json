{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/cf0a9691-5716-42e0-bfa1-49b35d3a7892')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/cf0a9691-5716-42e0-bfa1-49b35d3a7892')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "triggerOperator": "GreaterThan",
        "description": "'Generates an incident when Cyble Intelligence detects a malicious advertisement, malvertising activity, or redirect attempting to impersonate a legitimate brand.'\n",
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "name": "Cyble Vision Alerts Malicious Ads Detected",
        "queryPeriod": "30m",
        "tactics": [
          "InitialAccess",
          "Execution"
        ],
        "entityMappings": [
          {
            "entityType": "URL",
            "fieldMappings": [
              {
                "columnName": "MA_Domain_URL",
                "identifier": "Url"
              }
            ]
          },
          {
            "entityType": "DNS",
            "fieldMappings": [
              {
                "columnName": "MA_DomainName_Nested",
                "identifier": "DomainName"
              }
            ]
          }
        ],
        "query": "Alerts_malicious_ads\n| where Service == \"malicious_ads\"\n| extend MappedSeverity = Severity\n",
        "incidentConfiguration": {
          "groupingConfiguration": {
            "reopenClosedIncident": false,
            "lookbackDuration": "PT5H",
            "enabled": false,
            "matchingMethod": "AllEntities"
          },
          "alertDescriptionFormat": "Cyble Intelligence detected a malicious advertisement or suspicious redirect.\nDomain {{MA_Domain_URL}}\nBrand/Keyword {{MA_Keyword_Nested}}\nStatus Code {{MA_StatusCode}}\n",
          "alertDisplayNameFormat": "Malicious Ad Detected  {{MA_DomainName_Nested}}",
          "alertDetailsOverride": null,
          "createIncident": true
        },
        "status": "Available",
        "severity": "Low",
        "enabled": true,
        "queryFrequency": "30m",
        "customDetails": {
          "Keyword": "MA_Keyword_Nested",
          "MappedSeverity": "Severity",
          "Status": "Status",
          "Domain": "MA_Domain_URL",
          "AlertID": "AlertID",
          "IsLive": "MA_IsLive",
          "Service": "Service"
        },
        "suppressionDuration": "PT5M",
        "triggerThreshold": 0
      }
    }
  ]
}
