{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/6649e5a0-0365-452f-84b3-448a0aec7a59')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/6649e5a0-0365-452f-84b3-448a0aec7a59')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "triggerOperator": "GreaterThan",
        "severity": "Low",
        "subTechniques": [],
        "status": "Available",
        "tactics": [
          "Reconnaissance",
          "Impact",
          "ResourceDevelopment"
        ],
        "incidentConfiguration": {
          "groupingConfiguration": {
            "matchingMethod": "AllEntities",
            "lookbackDuration": "PT5H",
            "enabled": false,
            "reopenClosedIncident": false
          },
          "createIncident": true
        },
        "queryPeriod": "30m",
        "description": "'Detects hacktivist activity (Telegram posts, defacements, site takedowns, etc.) using the Alerts_Hacktivism parser. Extracts post content, attacker/team,domains, links, IPs, media and metadata for triage.'\n",
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "queryFrequency": "30m",
        "query": "Alerts_hacktivism \n| where Service contains \"hacktivism\" \n| extend Mappedseverity = Severity\n",
        "suppressionDuration": "PT5H",
        "customDetails": {
          "PostText": "HK_PostData",
          "AlertID": "AlertID",
          "TargetDomain": "HK_Domain",
          "Status": "Status",
          "Server": "HK_Server",
          "WebsiteURL": "HK_WebsiteURL",
          "PostID": "HK_PostID",
          "Emails": "HK_Emails",
          "ChannelLink": "HK_ChannelLink",
          "ChannelName": "HK_ChannelName",
          "MappedSeverity": "Severity",
          "Tags": "HK_Tags",
          "Phones": "HK_Phones",
          "Service": "Service",
          "SourceWebsite": "HK_SourceWebsite",
          "Attacker": "HK_Attacker",
          "Source": "HK_SourceWebsite",
          "PostedAt": "HK_PostedAt"
        },
        "entityMappings": [
          {
            "entityType": "Account",
            "fieldMappings": [
              {
                "columnName": "HK_AttackerTeam",
                "identifier": "Name"
              }
            ]
          },
          {
            "entityType": "URL",
            "fieldMappings": [
              {
                "columnName": "HK_All_URLs",
                "identifier": "Url"
              }
            ]
          },
          {
            "entityType": "DNS",
            "fieldMappings": [
              {
                "columnName": "HK_All_Domains",
                "identifier": "DomainName"
              }
            ]
          },
          {
            "entityType": "IP",
            "fieldMappings": [
              {
                "columnName": "HK_IP",
                "identifier": "Address"
              }
            ]
          }
        ],
        "enabled": true,
        "alertDetailsOverride": {
          "alertDisplayNameFormat": "CybleVision Hacktivism {{HK_ChannelName}} / {{HK_AttackerTeam}}",
          "alertDynamicProperties": [],
          "alertDescriptionFormat": "Hacktivism activity detected. Attacker/Team {{HK_AttackerTeam}} Post excerpt {{HK_PostData}} Domains/Links {{HK_All_Domains}}\n"
        },
        "name": "Cyble Vision Alerts Hacktivism",
        "triggerThreshold": 0
      }
    }
  ]
}
