{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/88db8505-1889-46aa-a4e2-4e866262dcb9')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/88db8505-1889-46aa-a4e2-4e866262dcb9')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "triggerThreshold": 0,
        "queryPeriod": "30m",
        "triggerOperator": "GreaterThan",
        "status": "Available",
        "name": "Cyble Vision Alerts Physical Threat Alert",
        "enabled": true,
        "description": "'Creates an incident for physical threats identified by Cyble Intelligence such as explosions, safety incidents, riots, or violence. Each alert generates a single incident for SOC evaluation.'\n",
        "queryFrequency": "30m",
        "alertDetailsOverride": {
          "alertDescriptionFormat": "A physical threat incident was identified by Cyble Intelligence.\nTitle {{PT_Title_Nested}}\nThreat Type {{PT_ThreatType}}\nPublished At {{PT_PublishedAt}}\n",
          "alertDisplayNameFormat": "Physical Threat Detected  {{PT_Title_Nested}}"
        },
        "tactics": [
          "Impact"
        ],
        "suppressionDuration": "PT5M",
        "query": "Alerts_physical_threats\n| where Service == \"physical_threats\"\n| extend MappedSeverity = Severity\n",
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "customDetails": {
          "AlertID": "AlertID",
          "Longitude": "PT_Longitude",
          "Service": "Service",
          "ThreatType": "PT_ThreatType",
          "LocationType": "PT_LocationType",
          "ThreatTitle": "PT_Title_Nested",
          "Location": "PT_LocationName",
          "Status": "Status",
          "MappedSeverity": "Severity",
          "Latitude": "PT_Latitude"
        },
        "incidentConfiguration": {
          "createIncident": true,
          "groupingConfiguration": {
            "reopenClosedIncident": false,
            "enabled": false,
            "matchingMethod": "AllEntities",
            "lookbackDuration": "PT5H"
          }
        },
        "severity": "Low",
        "entityMappings": [
          {
            "entityType": "URL",
            "fieldMappings": [
              {
                "identifier": "Url",
                "columnName": "PT_BaseSourceURL"
              }
            ]
          }
        ]
      }
    }
  ]
}
