{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/91a00e4f-3edb-49e9-ba6f-cec87a5bd2f8')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/91a00e4f-3edb-49e9-ba6f-cec87a5bd2f8')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "severity": "Low",
        "enabled": true,
        "name": "Cyble Vision Alerts Website Defacement Content",
        "tactics": [
          "Impact"
        ],
        "triggerThreshold": 0,
        "entityMappings": [
          {
            "entityType": "Url",
            "fieldMappings": [
              {
                "identifier": "Url",
                "columnName": "DC_URL"
              }
            ]
          },
          {
            "entityType": "Host",
            "fieldMappings": [
              {
                "identifier": "HostName",
                "columnName": "DC_DomainName"
              }
            ]
          }
        ],
        "status": "Available",
        "queryfrequency": "30m",
        "queryPeriod": "30m",
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "customDetails": {
          "Status": "Status",
          "DC_DomainName": "DC_DomainName",
          "DC_Keywords": "DC_Keywords",
          "AlertID": "AlertID",
          "DC_URL": "DC_URL",
          "MappedSeverity": "Severity",
          "Service": "Service",
          "DC_RecordID": "DC_RecordID"
        },
        "description": "'Triggers when monitored websites show new or suspicious content referencing known defacement patterns. Supports investigation into potential web compromise incidents.'\n",
        "triggerOperator": "GreaterThan",
        "query": "Alerts_defacement_content  \n| where Service == \"defacement_content\" \n| extend MappedSeverity = Severity\n",
        "incidentConfiguration": {
          "createIncident": true,
          "alertDisplayNameFormat": "Defacement Activity Detected {{DC_DomainName}}",
          "groupingConfiguration": {
            "reopenClosedIncident": false,
            "lookbackDuration": "PT5H",
            "enabled": false,
            "matchingMethod": "AllEntities"
          },
          "alertDescriptionFormat": "New or modified content was detected on website {{DC_DomainName}}. URL {{DC_URL}}. This may indicate unauthorized website updates or defacement activity.\n",
          "alertDetailsOverride": null
        }
      }
    }
  ]
}
