{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/b78c4641-cc16-48e0-9d05-c9b36a55d214')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/b78c4641-cc16-48e0-9d05-c9b36a55d214')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "name": "CybleVision Alerts Cyber Crime Forum Alerts",
        "entityMappings": [
          {
            "entityType": "Account",
            "fieldMappings": [
              {
                "columnName": "CF_Emails",
                "identifier": "Name"
              }
            ]
          },
          {
            "entityType": "URL",
            "fieldMappings": [
              {
                "columnName": "CF_Urls",
                "identifier": "Url"
              }
            ]
          },
          {
            "entityType": "DNS",
            "fieldMappings": [
              {
                "columnName": "CF_SourceName",
                "identifier": "DomainName"
              }
            ]
          }
        ],
        "triggerThreshold": 0,
        "triggerOperator": "GreaterThan",
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "tactics": [
          "Reconnaissance",
          "ResourceDevelopment",
          "Exfiltration"
        ],
        "subTechniques": [],
        "customDetails": {
          "TopicID": "CF_TopicID",
          "MappedSeverity": "Severity",
          "Tags": "CF_Tags",
          "Phones": "CF_Phones",
          "DiscussionDate": "CF_DiscussionDate",
          "TopicName": "CF_TopicName",
          "TopicCreatedBy": "CF_TopicCreatedBy",
          "AlertID": "AlertID",
          "Service": "Service",
          "Status": "Status",
          "TopicURL": "CF_TopicURL",
          "DiscussionBy": "CF_DiscussionBy",
          "Likes": "CF_Likes",
          "Reputation": "CF_Reputation",
          "Content": "CF_Content"
        },
        "status": "Available",
        "suppressionDuration": "PT5H",
        "incidentConfiguration": {
          "groupingConfiguration": {
            "enabled": false,
            "reopenClosedIncident": false,
            "matchingMethod": "AllEntities",
            "lookbackDuration": "PT5H"
          },
          "createIncident": true
        },
        "queryFrequency": "30m",
        "severity": "Low",
        "query": "Alerts_cyber_crime_forums \n| where Service == \"cyber_crime_forums\" \n| extend MappedSeverity = Severity\n",
        "enabled": true,
        "description": "'Detects discussions, marketplace posts, threat actor activity, and intelligence mentions from cybercrime forums. Extracts discussion metadata, topic details, URLs, emails, phone numbers, and content using Alerts_CyberCrimeForums parser.'\n",
        "alertDetailsOverride": {
          "alertDisplayNameFormat": "CybleVision Forum Mention {{CF_TopicName}}",
          "alertDescriptionFormat": "A mention was detected on a cybercrime forum. Source {{CF_SourceName}} By {{CF_DiscussionBy}} Content {{CF_Content}}\n",
          "alertDynamicProperties": []
        },
        "queryPeriod": "30m"
      }
    }
  ]
}
