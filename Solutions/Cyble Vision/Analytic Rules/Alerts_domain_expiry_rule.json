{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/81404e99-ce27-45aa-aa19-a276a3d4c645')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/81404e99-ce27-45aa-aa19-a276a3d4c645')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "name": "Cyble Vision Alerts Domain Expiry Alert",
        "tactics": [
          "Impact"
        ],
        "description": "'Triggers when a monitored domain is about to expire. Expired domains risk service disruption, takeover, or misuse by adversaries.'\n",
        "customDetails": {
          "MappedSeverity": "Severity",
          "Status": "Status",
          "DE_DueDays": "DE_DueDays",
          "DE_ExpiryDate": "DE_ExpiryDate",
          "DE_TypeText": "DE_TypeText",
          "AlertID": "AlertID",
          "Service": "Service",
          "DE_Domain": "DE_Domain"
        },
        "enabled": true,
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "entityMappings": [
          {
            "fieldMappings": [
              {
                "identifier": "DomainName",
                "columnName": "DE_Domain"
              }
            ],
            "entityType": "DNS"
          }
        ],
        "incidentConfiguration": {
          "groupingConfiguration": {
            "reopenClosedIncident": false,
            "enabled": false,
            "matchingMethod": "AllEntities",
            "lookbackDuration": "PT5H"
          },
          "alertDetailsOverride": null,
          "alertDescriptionFormat": "The monitored domain is expiring soon. Expiry Date {{DE_ExpiryDate}}. Due in {{DE_DueDays}} days. Alert Type {{DE_TypeText}}. Immediate renewal is recommended to avoid service disruption or domain hijacking.\n",
          "createIncident": true,
          "alertDisplayNameFormat": "Domain Expiration Imminent {{DE_Domain}}"
        },
        "severity": "Low",
        "query": "Alerts_domain_expiry  \n| where Service == \"domain_expiry\" \n| extend MappedSeverity = Severity\n",
        "triggerThreshold": 0,
        "queryfrequency": "30m",
        "queryPeriod": "30m",
        "status": "Available",
        "triggerOperator": "GreaterThan"
      }
    }
  ]
}
