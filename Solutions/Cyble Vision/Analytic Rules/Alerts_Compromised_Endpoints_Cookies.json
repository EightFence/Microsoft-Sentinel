{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/33B07EAA-F451-4C38-AC9F-8AF3F7E99F0E')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/33B07EAA-F451-4C38-AC9F-8AF3F7E99F0E')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "triggerOperator": "GreaterThan",
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "tactics": [
          "CredentialAccess",
          "DefenseEvasion"
        ],
        "customDetails": {
          "CookieExpiry": "CEC_Expiry",
          "CookieSessionID": "CEC_SessionID",
          "CookieEmail": "CEC_Email",
          "Service": "Service",
          "MappedSeverity": "Severity",
          "CookieDomain": "CEC_EmailDomain",
          "AlertID": "AlertID",
          "Status": "Status",
          "CookieURL": "CEC_URL"
        },
        "severity": "Low",
        "queryfrequency": "30m",
        "suppressionDuration": "PT1H",
        "query": "Alerts_compromised_endpoints_cookies\n| where Service == \"compromised_endpoints_cookies\"\n| extend MappedSeverity = Severity\n",
        "triggerThreshold": 0,
        "description": "'Detects compromised browser cookies associated with monitored entities. Identifies exposed authentication cookies with future expiry, enabling potential session hijacking or persistent unauthorized access.'\n",
        "incidentConfiguration": {
          "createIncident": true,
          "groupingConfiguration": {
            "matchingMethod": "AllEntities",
            "lookbackDuration": "PT5H",
            "enabled": false,
            "reopenClosedIncident": false
          }
        },
        "entityMappings": [
          {
            "fieldMappings": [
              {
                "identifier": "Url",
                "columnName": "CEC_URL"
              }
            ],
            "entityType": "Url"
          },
          {
            "fieldMappings": [
              {
                "identifier": "FullName",
                "columnName": "CEC_Email"
              }
            ],
            "entityType": "Account"
          }
        ],
        "enabled": true,
        "alertDetailsOverride": {
          "alertDisplayNameFormat": "Compromised Session Cookie {{CEC_Email}} {{CEC_URL}}",
          "alertDescriptionFormat": "A compromised browser session cookie associated with {{CEC_EmailDomain}} was detected for service {{CEC_URL}}. The cookie has not expired and may allow session hijacking. Session ID {{CEC_SessionID}}.\n"
        },
        "status": "Available",
        "queryPeriod": "30m",
        "name": "Cyble Vision Alerts Compromised Endpoint Cookies"
      }
    }
  ]
}
