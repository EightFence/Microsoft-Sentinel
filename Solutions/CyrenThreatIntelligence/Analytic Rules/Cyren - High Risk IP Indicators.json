{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/5d7e8b3a-1f2c-4e5d-9a0b-c1d2e3f4a5b6')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/5d7e8b3a-1f2c-4e5d-9a0b-c1d2e3f4a5b6')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "description": "'Detects high-risk IP indicators (risk score >= 80) from Cyren threat intelligence feeds in the last 24 hours.\nThese IPs are associated with malicious activity such as malware distribution, phishing, or botnet command and control.'\n",
        "severity": "High",
        "status": "Available",
        "tactics": [
          "CommandAndControl",
          "Impact"
        ],
        "triggerOperator": "gt",
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "queryFrequency": "1h",
        "name": "Cyren High-Risk IP Indicators",
        "suppressionDuration": "1h",
        "incidentConfiguration": {
          "createIncident": true,
          "groupingConfiguration": {
            "enabled": true,
            "groupByEntities": [
              "IP"
            ],
            "reopenClosedIncident": false,
            "matchingMethod": "Selected",
            "lookbackDuration": "1d"
          }
        },
        "entityMappings": [
          {
            "fieldMappings": [
              {
                "columnName": "IPAddress",
                "identifier": "Address"
              }
            ],
            "entityType": "IP"
          }
        ],
        "customDetails": {
          "DetectionCount": "DetectionCount",
          "RiskScore": "MaxRisk",
          "Categories": "ThreatCategories",
          "Source": "Source"
        },
        "suppressionEnabled": false,
        "queryPeriod": "1d",
        "triggerThreshold": 0,
        "query": "Cyren_Indicators_CL\n| where TimeGenerated > ago(1d)\n| where isnotempty(ip_s)\n| extend Risk = toint(risk_d)\n| where Risk >= 80\n| summarize \n    DetectionCount = count(), \n    MaxRisk = max(Risk), \n    Categories = make_set(category_s) \n  by IP = ip_s, Source = source_s\n| where DetectionCount >= 1\n| extend \n    IPAddress = IP,\n    ThreatCategories = strcat_array(Categories, \", \")\n"
      }
    }
  ]
}
