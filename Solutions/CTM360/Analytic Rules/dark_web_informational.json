{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/ab55aff7-7f23-43e8-a93c-6c417647f032')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/ab55aff7-7f23-43e8-a93c-6c417647f032')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "triggerThreshold": 0,
        "description": "New Dark Web with severity Informational found",
        "severity": "Informational",
        "triggerOperator": "gt",
        "suppressionDuration": "5h",
        "suppressionEnabled": false,
        "query": "CBSLog_Azure_1_CL | where severity_s == \"Informational\" | where type_s == \"Dark Web\" | where status_s != \"Closed\" or status_s != \"Resolved\"",
        "tactics": [
          "Reconnaissance"
        ],
        "status": "Available",
        "queryFrequency": "5m",
        "queryPeriod": "5m",
        "incidentConfiguration": {
          "createIncident": true,
          "groupingConfiguration": {
            "enabled": false,
            "reopenClosedIncident": false,
            "lookbackDuration": "PT5H",
            "matchingMethod": "AllEntities"
          }
        },
        "name": "Dark Web (Informational)"
      }
    }
  ]
}
