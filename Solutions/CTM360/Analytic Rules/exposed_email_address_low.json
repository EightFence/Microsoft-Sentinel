{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/2609f263-201e-4c97-87ce-8c2f4502edf9')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/2609f263-201e-4c97-87ce-8c2f4502edf9')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "tactics": [
          "Collection"
        ],
        "queryPeriod": "5m",
        "queryFrequency": "5m",
        "query": "CBSLog_Azure_1_CL | where severity_s == \"Low\" | where type_s == \"Exposed Email Address\" | where status_s != \"Closed\" or status_s != \"Resolved\"",
        "severity": "Low",
        "description": "New Exposed Email Address with severity Low found",
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "status": "Available",
        "name": "Exposed Email Address (Low)",
        "suppressionEnabled": false,
        "suppressionDuration": "5h",
        "triggerOperator": "gt",
        "triggerThreshold": 0,
        "incidentConfiguration": {
          "groupingConfiguration": {
            "lookbackDuration": "PT5H",
            "reopenClosedIncident": false,
            "enabled": false,
            "matchingMethod": "AllEntities"
          },
          "createIncident": true
        }
      }
    }
  ]
}
