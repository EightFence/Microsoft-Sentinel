{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/40ca1b4c-278a-49b6-b2c6-c236edb661cc')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/40ca1b4c-278a-49b6-b2c6-c236edb661cc')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "suppressionEnabled": false,
        "severity": "High",
        "triggerThreshold": 0,
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "description": "New Data Leakage with severity High found",
        "queryFrequency": "5m",
        "queryPeriod": "5m",
        "tactics": [
          "Exfiltration"
        ],
        "status": "Available",
        "suppressionDuration": "5h",
        "incidentConfiguration": {
          "groupingConfiguration": {
            "lookbackDuration": "PT5H",
            "reopenClosedIncident": false,
            "matchingMethod": "AllEntities",
            "enabled": false
          },
          "createIncident": true
        },
        "query": "CBSLog_Azure_1_CL | where severity_s == \"High\" | where type_s == \"Data Leakage\" | where status_s != \"Closed\" or status_s != \"Resolved\"",
        "triggerOperator": "gt",
        "name": "Data Leakage (High)"
      }
    }
  ]
}
