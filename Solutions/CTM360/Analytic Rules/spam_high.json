{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/d865948f-a322-4057-bcfa-b409dac5b78f')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/d865948f-a322-4057-bcfa-b409dac5b78f')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "queryFrequency": "5m",
        "status": "Available",
        "queryPeriod": "5m",
        "query": "CBSLog_Azure_1_CL | where severity_s == \"High\" | where type_s == \"Spam\" | where status_s != \"Closed\" or status_s != \"Resolved\"",
        "description": "New Spam with severity High found",
        "triggerThreshold": 0,
        "incidentConfiguration": {
          "createIncident": true,
          "groupingConfiguration": {
            "matchingMethod": "AllEntities",
            "enabled": false,
            "lookbackDuration": "PT5H",
            "reopenClosedIncident": false
          }
        },
        "severity": "High",
        "tactics": [
          "InitialAccess"
        ],
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "triggerOperator": "gt",
        "name": "Spam (High)",
        "suppressionEnabled": false,
        "suppressionDuration": "5h"
      }
    }
  ]
}
