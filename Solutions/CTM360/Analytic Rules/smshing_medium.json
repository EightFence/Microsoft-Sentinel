{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/ed3b0682-1090-4aa2-812b-e51ebfb80279')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/ed3b0682-1090-4aa2-812b-e51ebfb80279')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "suppressionDuration": "5h",
        "status": "Available",
        "tactics": [
          "InitialAccess"
        ],
        "triggerOperator": "gt",
        "description": "New Smshing with severity Medium found",
        "incidentConfiguration": {
          "groupingConfiguration": {
            "reopenClosedIncident": false,
            "matchingMethod": "AllEntities",
            "enabled": false,
            "lookbackDuration": "PT5H"
          },
          "createIncident": true
        },
        "queryFrequency": "5m",
        "severity": "Medium",
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "query": "CBSLog_Azure_1_CL | where severity_s == \"Medium\" | where type_s == \"Smshing\" | where status_s != \"Closed\" or status_s != \"Resolved\"",
        "suppressionEnabled": false,
        "triggerThreshold": 0,
        "queryPeriod": "5m",
        "name": "Smshing (Medium)"
      }
    }
  ]
}
