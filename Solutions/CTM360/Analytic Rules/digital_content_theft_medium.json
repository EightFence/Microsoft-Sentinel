{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/e944857e-4f1f-4388-a334-c938c6124441')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/e944857e-4f1f-4388-a334-c938c6124441')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "triggerOperator": "gt",
        "queryFrequency": "5m",
        "suppressionDuration": "5h",
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "status": "Available",
        "queryPeriod": "5m",
        "description": "New Digital Content Theft with severity Medium found",
        "suppressionEnabled": false,
        "triggerThreshold": 0,
        "name": "Digital Content Theft (Medium)",
        "severity": "Medium",
        "tactics": [
          "Exfiltration"
        ],
        "incidentConfiguration": {
          "groupingConfiguration": {
            "enabled": false,
            "matchingMethod": "AllEntities",
            "lookbackDuration": "PT5H",
            "reopenClosedIncident": false
          },
          "createIncident": true
        },
        "query": "CBSLog_Azure_1_CL | where severity_s == \"Medium\" | where type_s == \"Digital Content Theft\" | where status_s != \"Closed\" or status_s != \"Resolved\""
      }
    }
  ]
}
