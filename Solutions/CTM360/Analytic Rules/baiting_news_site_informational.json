{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/e621eb5b-2612-4c0e-84f2-036a6694d619')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/e621eb5b-2612-4c0e-84f2-036a6694d619')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "description": "New Baiting News Site with severity Informational found",
        "queryPeriod": "5m",
        "suppressionEnabled": false,
        "tactics": [
          "Reconnaissance"
        ],
        "suppressionDuration": "5h",
        "triggerThreshold": 0,
        "queryFrequency": "5m",
        "incidentConfiguration": {
          "createIncident": true,
          "groupingConfiguration": {
            "matchingMethod": "AllEntities",
            "lookbackDuration": "PT5H",
            "enabled": false,
            "reopenClosedIncident": false
          }
        },
        "severity": "Informational",
        "status": "Available",
        "query": "CBSLog_Azure_1_CL | where severity_s == \"Informational\" | where type_s == \"Baiting News Site\" | where status_s != \"Closed\" or status_s != \"Resolved\"",
        "name": "Baiting News Site (Informational)",
        "triggerOperator": "gt"
      }
    }
  ]
}
