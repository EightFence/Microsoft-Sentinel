{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/77c966c0-0ed4-49c2-bb52-6f0a644bcc56')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/77c966c0-0ed4-49c2-bb52-6f0a644bcc56')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "severity": "Medium",
        "description": "New Baiting News Site with severity Medium found",
        "name": "Baiting News Site (Medium)",
        "status": "Available",
        "triggerOperator": "gt",
        "incidentConfiguration": {
          "groupingConfiguration": {
            "matchingMethod": "AllEntities",
            "lookbackDuration": "PT5H",
            "enabled": false,
            "reopenClosedIncident": false
          },
          "createIncident": true
        },
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "queryFrequency": "5m",
        "suppressionEnabled": false,
        "query": "CBSLog_Azure_1_CL | where severity_s == \"Medium\" | where type_s == \"Baiting News Site\" | where status_s != \"Closed\" or status_s != \"Resolved\"",
        "queryPeriod": "5m",
        "suppressionDuration": "5h",
        "triggerThreshold": 0,
        "tactics": [
          "Reconnaissance"
        ]
      }
    }
  ]
}
