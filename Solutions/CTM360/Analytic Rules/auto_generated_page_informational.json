{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/c33d1539-832a-4310-bfc3-b0014e7c82bf')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/c33d1539-832a-4310-bfc3-b0014e7c82bf')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "suppressionDuration": "5h",
        "tactics": [
          "Reconnaissance"
        ],
        "queryPeriod": "5m",
        "triggerThreshold": 0,
        "triggerOperator": "gt",
        "incidentConfiguration": {
          "groupingConfiguration": {
            "matchingMethod": "AllEntities",
            "enabled": false,
            "lookbackDuration": "PT5H",
            "reopenClosedIncident": false
          },
          "createIncident": true
        },
        "name": "Auto Generated Page (Informational)",
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "status": "Available",
        "severity": "Informational",
        "query": "CBSLog_Azure_1_CL | where severity_s == \"Informational\" | where type_s == \"Auto Generated Page\" | where status_s != \"Closed\" or status_s != \"Resolved\"",
        "queryFrequency": "5m",
        "suppressionEnabled": false,
        "description": "New Auto Generated Page with severity Informational found"
      }
    }
  ]
}
