{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/71ce7988-130e-42d6-82ea-a687c13011b2')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/71ce7988-130e-42d6-82ea-a687c13011b2')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "severity": "High",
        "suppressionEnabled": false,
        "triggerThreshold": 0,
        "suppressionDuration": "5h",
        "incidentConfiguration": {
          "createIncident": true,
          "groupingConfiguration": {
            "reopenClosedIncident": false,
            "lookbackDuration": "PT5H",
            "matchingMethod": "AllEntities",
            "enabled": false
          }
        },
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "triggerOperator": "gt",
        "name": "Exposed Misconfiguration (High)",
        "description": "New Exposed Misconfiguration with severity High found",
        "queryPeriod": "5m",
        "tactics": [
          "ResourceDevelopment"
        ],
        "query": "CBSLog_Azure_1_CL | where severity_s == \"High\" | where type_s == \"Exposed Misconfiguration\" | where status_s != \"Closed\" or status_s != \"Resolved\"",
        "queryFrequency": "5m",
        "status": "Available"
      }
    }
  ]
}
