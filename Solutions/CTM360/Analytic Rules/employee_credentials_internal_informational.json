{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/9ba9f318-0ba7-4d40-9e24-8b768a8a0634')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/9ba9f318-0ba7-4d40-9e24-8b768a8a0634')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "severity": "Informational",
        "triggerThreshold": 0,
        "name": "Employee Credentials Internal (Informational)",
        "queryPeriod": "5m",
        "incidentConfiguration": {
          "groupingConfiguration": {
            "reopenClosedIncident": false,
            "matchingMethod": "AllEntities",
            "enabled": false,
            "lookbackDuration": "PT5H"
          },
          "createIncident": true
        },
        "tactics": [
          "InitialAccess"
        ],
        "description": "New Employee Credentials Internal with severity Informational found",
        "triggerOperator": "gt",
        "status": "Available",
        "suppressionDuration": "5h",
        "queryFrequency": "5m",
        "suppressionEnabled": false,
        "query": "CBSLog_Azure_1_CL | where severity_s == \"Informational\" | where type_s == \"Employee Credentials Internal\" | where status_s != \"Closed\" or status_s != \"Resolved\"",
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        }
      }
    }
  ]
}
