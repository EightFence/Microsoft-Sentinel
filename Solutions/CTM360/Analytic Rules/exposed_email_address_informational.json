{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/d4d6c921-c566-4fbb-b6c0-49449bcbdfa6')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/d4d6c921-c566-4fbb-b6c0-49449bcbdfa6')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "queryPeriod": "5m",
        "query": "CBSLog_Azure_1_CL | where severity_s == \"Informational\" | where type_s == \"Exposed Email Address\" | where status_s != \"Closed\" or status_s != \"Resolved\"",
        "triggerOperator": "gt",
        "tactics": [
          "Collection"
        ],
        "status": "Available",
        "suppressionDuration": "5h",
        "suppressionEnabled": false,
        "name": "Exposed Email Address (Informational)",
        "incidentConfiguration": {
          "groupingConfiguration": {
            "reopenClosedIncident": false,
            "matchingMethod": "AllEntities",
            "enabled": false,
            "lookbackDuration": "PT5H"
          },
          "createIncident": true
        },
        "description": "New Exposed Email Address with severity Informational found",
        "severity": "Informational",
        "triggerThreshold": 0,
        "queryFrequency": "5m"
      }
    }
  ]
}
