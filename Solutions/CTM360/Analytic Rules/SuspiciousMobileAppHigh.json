{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/6e9afac9-6828-486f-b1d8-cf76e86e1224')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/6e9afac9-6828-486f-b1d8-cf76e86e1224')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "name": "Suspicious Mobile App High",
        "queryPeriod": "5h",
        "suppressionDuration": "5h",
        "status": "Available",
        "tactics": [
          "ResourceDevelopment"
        ],
        "triggerThreshold": 0,
        "description": "'New Suspicious Mobile App with severity High found'\n",
        "severity": "High",
        "entityMappings": [
          {
            "fieldMappings": [
              {
                "columnName": "subject_s",
                "identifier": "Url"
              }
            ],
            "entityType": "URL"
          }
        ],
        "suppressionEnabled": false,
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "incidentConfiguration": {
          "groupingConfiguration": {
            "enabled": false,
            "lookbackDuration": "PT5H",
            "matchingMethod": "AllEntities",
            "reopenClosedIncident": false
          },
          "createIncident": true
        },
        "triggerOperator": "gt",
        "queryFrequency": "5h",
        "query": "CBSLog_Azure_1_CL | where severity_s == \"High\" | where type_s == \"Suspicious Mobile App\" | where status_s != \"Closed\" or status_s != \"Resolved\""
      }
    }
  ]
}
