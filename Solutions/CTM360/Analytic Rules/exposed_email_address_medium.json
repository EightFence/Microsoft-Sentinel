{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/ad9f60d9-6720-4d51-a0eb-f9ef2d06ccfc')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/ad9f60d9-6720-4d51-a0eb-f9ef2d06ccfc')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "query": "CBSLog_Azure_1_CL | where severity_s == \"Medium\" | where type_s == \"Exposed Email Address\" | where status_s != \"Closed\" or status_s != \"Resolved\"",
        "suppressionDuration": "5h",
        "severity": "Medium",
        "name": "Exposed Email Address (Medium)",
        "description": "New Exposed Email Address with severity Medium found",
        "tactics": [
          "Collection"
        ],
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "queryFrequency": "5m",
        "triggerOperator": "gt",
        "suppressionEnabled": false,
        "queryPeriod": "5m",
        "triggerThreshold": 0,
        "incidentConfiguration": {
          "createIncident": true,
          "groupingConfiguration": {
            "matchingMethod": "AllEntities",
            "enabled": false,
            "lookbackDuration": "PT5H",
            "reopenClosedIncident": false
          }
        },
        "status": "Available"
      }
    }
  ]
}
