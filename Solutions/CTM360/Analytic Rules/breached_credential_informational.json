{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/eff71000-f709-47a3-8007-e8a856db06e5')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/eff71000-f709-47a3-8007-e8a856db06e5')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "query": "CBSLog_Azure_1_CL | where severity_s == \"Informational\" | where type_s == \"Breached Credential\" | where status_s != \"Closed\" or status_s != \"Resolved\"",
        "triggerThreshold": 0,
        "name": "Breached Credential (Informational)",
        "tactics": [
          "InitialAccess"
        ],
        "suppressionDuration": "5h",
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "queryFrequency": "5m",
        "severity": "Informational",
        "triggerOperator": "gt",
        "incidentConfiguration": {
          "createIncident": true,
          "groupingConfiguration": {
            "enabled": false,
            "reopenClosedIncident": false,
            "lookbackDuration": "PT5H",
            "matchingMethod": "AllEntities"
          }
        },
        "description": "New Breached Credential with severity Informational found",
        "status": "Available",
        "queryPeriod": "5m",
        "suppressionEnabled": false
      }
    }
  ]
}
