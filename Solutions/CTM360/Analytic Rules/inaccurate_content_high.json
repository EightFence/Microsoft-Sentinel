{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/92d39e56-60b8-4b53-879d-f49a79b006a2')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/92d39e56-60b8-4b53-879d-f49a79b006a2')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "severity": "High",
        "suppressionEnabled": false,
        "triggerThreshold": 0,
        "suppressionDuration": "5h",
        "incidentConfiguration": {
          "createIncident": true,
          "groupingConfiguration": {
            "reopenClosedIncident": false,
            "lookbackDuration": "PT5H",
            "matchingMethod": "AllEntities",
            "enabled": false
          }
        },
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "triggerOperator": "gt",
        "name": "Inaccurate Content (High)",
        "description": "New Inaccurate Content with severity High found",
        "queryPeriod": "5m",
        "tactics": [
          "Impact"
        ],
        "query": "CBSLog_Azure_1_CL | where severity_s == \"High\" | where type_s == \"Inaccurate Content\" | where status_s != \"Closed\" or status_s != \"Resolved\"",
        "queryFrequency": "5m",
        "status": "Available"
      }
    }
  ]
}
