{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/833b5430-9454-41f8-96ac-bf77e67df53b')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/833b5430-9454-41f8-96ac-bf77e67df53b')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "severity": "Informational",
        "name": "Exposed Misconfiguration (Informational)",
        "suppressionDuration": "5h",
        "queryPeriod": "5m",
        "triggerOperator": "gt",
        "status": "Available",
        "description": "New Exposed Misconfiguration with severity Informational found",
        "suppressionEnabled": false,
        "query": "CBSLog_Azure_1_CL | where severity_s == \"Informational\" | where type_s == \"Exposed Misconfiguration\" | where status_s != \"Closed\" or status_s != \"Resolved\"",
        "queryFrequency": "5m",
        "tactics": [
          "ResourceDevelopment"
        ],
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "triggerThreshold": 0,
        "incidentConfiguration": {
          "groupingConfiguration": {
            "reopenClosedIncident": false,
            "lookbackDuration": "PT5H",
            "enabled": false,
            "matchingMethod": "AllEntities"
          },
          "createIncident": true
        }
      }
    }
  ]
}
