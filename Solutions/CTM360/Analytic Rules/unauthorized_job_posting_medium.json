{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/a2ff372f-4f64-40f4-9a44-e582a1d3064c')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/a2ff372f-4f64-40f4-9a44-e582a1d3064c')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "description": "New Unauthorized Job Posting with severity Medium found",
        "tactics": [
          "InitialAccess"
        ],
        "queryPeriod": "5m",
        "incidentConfiguration": {
          "createIncident": true,
          "groupingConfiguration": {
            "lookbackDuration": "PT5H",
            "reopenClosedIncident": false,
            "matchingMethod": "AllEntities",
            "enabled": false
          }
        },
        "severity": "Medium",
        "triggerOperator": "gt",
        "status": "Available",
        "queryFrequency": "5m",
        "triggerThreshold": 0,
        "name": "Unauthorized Job Posting (Medium)",
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "suppressionEnabled": false,
        "query": "CBSLog_Azure_1_CL | where severity_s == \"Medium\" | where type_s == \"Unauthorized Job Posting\" | where status_s != \"Closed\" or status_s != \"Resolved\"",
        "suppressionDuration": "5h"
      }
    }
  ]
}
