{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/7f5eba11-606f-4fbd-9eb7-1712425697c6')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/7f5eba11-606f-4fbd-9eb7-1712425697c6')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "suppressionEnabled": false,
        "description": "New Digital Content Theft with severity Low found",
        "incidentConfiguration": {
          "groupingConfiguration": {
            "lookbackDuration": "PT5H",
            "reopenClosedIncident": false,
            "enabled": false,
            "matchingMethod": "AllEntities"
          },
          "createIncident": true
        },
        "query": "CBSLog_Azure_1_CL | where severity_s == \"Low\" | where type_s == \"Digital Content Theft\" | where status_s != \"Closed\" or status_s != \"Resolved\"",
        "queryFrequency": "5m",
        "status": "Available",
        "name": "Digital Content Theft (Low)",
        "tactics": [
          "Exfiltration"
        ],
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "severity": "Low",
        "queryPeriod": "5m",
        "triggerOperator": "gt",
        "triggerThreshold": 0,
        "suppressionDuration": "5h"
      }
    }
  ]
}
