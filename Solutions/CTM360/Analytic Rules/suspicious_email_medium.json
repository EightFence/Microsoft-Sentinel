{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/5e163001-3e3a-4c92-be77-0d7a86f54eb1')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/5e163001-3e3a-4c92-be77-0d7a86f54eb1')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "incidentConfiguration": {
          "groupingConfiguration": {
            "reopenClosedIncident": false,
            "enabled": false,
            "lookbackDuration": "PT5H",
            "matchingMethod": "AllEntities"
          },
          "createIncident": true
        },
        "triggerOperator": "gt",
        "suppressionDuration": "5h",
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "triggerThreshold": 0,
        "name": "Suspicious Email (Medium)",
        "description": "New Suspicious Email with severity Medium found",
        "query": "CBSLog_Azure_1_CL | where severity_s == \"Medium\" | where type_s == \"Suspicious Email\" | where status_s != \"Closed\" or status_s != \"Resolved\"",
        "suppressionEnabled": false,
        "tactics": [
          "InitialAccess"
        ],
        "queryFrequency": "5m",
        "queryPeriod": "5m",
        "status": "Available",
        "severity": "Medium"
      }
    }
  ]
}
