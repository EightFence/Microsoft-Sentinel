{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/4999feef-84af-4510-a2c8-91265873b552')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/4999feef-84af-4510-a2c8-91265873b552')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "triggerThreshold": 0,
        "status": "Available",
        "queryPeriod": "5m",
        "suppressionEnabled": false,
        "triggerOperator": "gt",
        "incidentConfiguration": {
          "createIncident": true,
          "groupingConfiguration": {
            "reopenClosedIncident": false,
            "enabled": false,
            "lookbackDuration": "PT5H",
            "matchingMethod": "AllEntities"
          }
        },
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "description": "New Unauthorized Association with severity Medium found",
        "suppressionDuration": "5h",
        "tactics": [
          "CredentialAccess"
        ],
        "name": "Unauthorized Association (Medium)",
        "severity": "Medium",
        "queryFrequency": "5m",
        "query": "CBSLog_Azure_1_CL | where severity_s == \"Medium\" | where type_s == \"Unauthorized Association\" | where status_s != \"Closed\" or status_s != \"Resolved\""
      }
    }
  ]
}
