{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/b5c9c09d-0bbc-4af1-b842-62f9c0f72f32')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/b5c9c09d-0bbc-4af1-b842-62f9c0f72f32')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "status": "Available",
        "description": "New Auto Generated Page with severity Medium found",
        "triggerThreshold": 0,
        "tactics": [
          "Reconnaissance"
        ],
        "name": "Auto Generated Page (Medium)",
        "queryPeriod": "5m",
        "incidentConfiguration": {
          "createIncident": true,
          "groupingConfiguration": {
            "matchingMethod": "AllEntities",
            "reopenClosedIncident": false,
            "lookbackDuration": "PT5H",
            "enabled": false
          }
        },
        "suppressionDuration": "5h",
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "severity": "Medium",
        "suppressionEnabled": false,
        "query": "CBSLog_Azure_1_CL | where severity_s == \"Medium\" | where type_s == \"Auto Generated Page\" | where status_s != \"Closed\" or status_s != \"Resolved\"",
        "triggerOperator": "gt",
        "queryFrequency": "5m"
      }
    }
  ]
}
