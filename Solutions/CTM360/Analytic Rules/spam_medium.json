{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/2c144f2f-7e2a-4a32-8df3-2e825940b6eb')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/2c144f2f-7e2a-4a32-8df3-2e825940b6eb')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "incidentConfiguration": {
          "createIncident": true,
          "groupingConfiguration": {
            "reopenClosedIncident": false,
            "lookbackDuration": "PT5H",
            "matchingMethod": "AllEntities",
            "enabled": false
          }
        },
        "description": "New Spam with severity Medium found",
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "queryFrequency": "5m",
        "queryPeriod": "5m",
        "severity": "Medium",
        "query": "CBSLog_Azure_1_CL | where severity_s == \"Medium\" | where type_s == \"Spam\" | where status_s != \"Closed\" or status_s != \"Resolved\"",
        "suppressionDuration": "5h",
        "triggerThreshold": 0,
        "name": "Spam (Medium)",
        "triggerOperator": "gt",
        "suppressionEnabled": false,
        "tactics": [
          "InitialAccess"
        ],
        "status": "Available"
      }
    }
  ]
}
