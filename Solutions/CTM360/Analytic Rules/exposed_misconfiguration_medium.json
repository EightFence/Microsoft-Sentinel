{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/6e343c15-d718-435c-a64d-37f4a408c7c2')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/6e343c15-d718-435c-a64d-37f4a408c7c2')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "suppressionDuration": "5h",
        "triggerOperator": "gt",
        "description": "New Exposed Misconfiguration with severity Medium found",
        "suppressionEnabled": false,
        "name": "Exposed Misconfiguration (Medium)",
        "severity": "Medium",
        "query": "CBSLog_Azure_1_CL | where severity_s == \"Medium\" | where type_s == \"Exposed Misconfiguration\" | where status_s != \"Closed\" or status_s != \"Resolved\"",
        "status": "Available",
        "queryPeriod": "5m",
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "queryFrequency": "5m",
        "tactics": [
          "ResourceDevelopment"
        ],
        "triggerThreshold": 0,
        "incidentConfiguration": {
          "createIncident": true,
          "groupingConfiguration": {
            "enabled": false,
            "matchingMethod": "AllEntities",
            "reopenClosedIncident": false,
            "lookbackDuration": "PT5H"
          }
        }
      }
    }
  ]
}
