      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "tactics": [],
        "status": "Available",
        "triggerThreshold": 0,
        "queryPeriod": "3h",
        "name": "Veeam ONE Unusual Job Duration",
        "severity": "Medium",
