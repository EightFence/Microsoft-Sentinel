{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/e92ba6bb-53ea-4347-b1a6-2e015298bbdc')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/e92ba6bb-53ea-4347-b1a6-2e015298bbdc')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "severity": "Informational",
        "queryFrequency": "1d",
        "status": "Available",
        "customDetails": {
          "MessageDetails": "MessageDetails",
          "EventId": "EventId",
          "VbrHostName": "DataSource",
          "Severity": "Severity",
          "Date": "Date"
        },
        "queryPeriod": "1d",
        "name": "NDMP Server Deleted",
        "description": "Detects when an NDMP server is deleted from Veeam Backup & Replication. This might indicate unauthorized removal of critical components.",
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "triggerThreshold": 0,
        "tactics": [],
        "triggerOperator": "gt",
        "query": "Veeam_GetSecurityEvents\n| where instanceId == 28850\n| project\n    Date = format_datetime(TimeGenerated, 'dd.MM.yyyy HH:mm'),\n    DataSource = original_host,\n    EventId = instanceId,\n    UserName = user,\n MessageDetails = Description,\n   Severity = SeverityDescription"
      }
    }
  ]
}
