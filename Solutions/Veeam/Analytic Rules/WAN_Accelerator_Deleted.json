{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/5b19f19b-d92c-486f-be98-ba2c5945e240')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/5b19f19b-d92c-486f-be98-ba2c5945e240')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "description": "Detects when a WAN accelerator is deleted from Veeam Backup & Replication. This might indicate unauthorized removal of critical components.",
        "queryPeriod": "1d",
        "customDetails": {
          "Severity": "Severity",
          "Date": "Date",
          "VbrHostName": "DataSource",
          "MessageDetails": "MessageDetails",
          "EventId": "EventId"
        },
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "tactics": [
          "Impact"
        ],
        "triggerThreshold": 0,
        "queryFrequency": "1d",
        "severity": "Informational",
        "status": "Available",
        "query": "Veeam_GetSecurityEvents\n| where instanceId == 27300\n| project\n    Date = format_datetime(TimeGenerated, 'dd.MM.yyyy HH:mm'),\n    DataSource = original_host,\n    EventId = instanceId,\n    [\"User Name\"] = user,\n  MessageDetails = Description,\n   Severity = SeverityDescription",
        "name": "WAN Accelerator Deleted",
        "triggerOperator": "gt"
      }
    }
  ]
}
