{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/6117e317-4b90-4bcc-a71f-0c1f29d82ce3')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/6117e317-4b90-4bcc-a71f-0c1f29d82ce3')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "tactics": [],
        "queryPeriod": "5m",
        "queryFrequency": "5m",
        "query": "VeeamOneTriggeredAlarms_CL | where PredefinedAlarmId == 332",
        "severity": "High",
        "description": "Detects Hyper-V VMs with no replica configured.",
        "customDetails": {
          "VoneHostName": "VoneHostName",
          "Description": "Description",
          "TriggeredTime": "TriggeredTime",
          "ObjectName": "ObjectName",
          "Comment": "Comment",
          "TriggeredAlarmId": "TriggeredAlarmId",
          "ObjectId": "ObjectId",
          "PredefinedAlarmId": "PredefinedAlarmId",
          "ObjectType": "ObjectType",
          "Name": "Name",
          "Status": "Status"
        },
        "status": "Available",
        "name": "Veeam ONE VM with No Replica (Hyper-V)",
        "triggerOperator": "gt",
        "triggerThreshold": 0,
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        }
      }
    }
  ]
}
