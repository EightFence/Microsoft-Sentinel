{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/d297961f-f8a3-4f84-865d-ec3a07641699')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/d297961f-f8a3-4f84-865d-ec3a07641699')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "triggerThreshold": 0,
        "queryFrequency": "5m",
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "query": "Veeam_GetSecurityEvents\n| where instanceId == 31400\n| project\n    Date = format_datetime(TimeGenerated, 'dd.MM.yyyy HH:mm'),\n    DataSource = original_host,\n    EventId = instanceId,\n    [\"User Name\"] = user,\n  MessageDetails = Description,\n   Severity = SeverityDescription",
        "triggerOperator": "gt",
        "tactics": [],
        "status": "Available",
        "customDetails": {
          "Date": "Date",
          "Severity": "Severity",
          "MessageDetails": "MessageDetails",
          "VbrHostName": "DataSource",
          "EventId": "EventId"
        },
        "queryPeriod": "5m",
        "name": "User or Group Deleted",
        "description": "Detects when a user or user group is deleted from Veeam Backup & Replication. This might indicate unauthorized removal of critical components.",
        "severity": "High"
      }
    }
  ]
}
