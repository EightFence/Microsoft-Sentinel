{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/8e4986ac-7388-4782-b389-0b0288123dbc')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/8e4986ac-7388-4782-b389-0b0288123dbc')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "tactics": [
          "Impact"
        ],
        "status": "Available",
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "triggerThreshold": 0,
        "severity": "High",
        "description": "Detects when the Veeam license is removed from Veeam Backup & Replication.",
        "queryPeriod": "5m",
        "customDetails": {
          "VbrHostName": "DataSource",
          "EventId": "EventId",
          "Severity": "Severity",
          "Date": "Date",
          "MessageDetails": "MessageDetails"
        },
        "name": "License Removed",
        "triggerOperator": "gt",
        "query": "Veeam_GetSecurityEvents\n| where instanceId == 24080\n| project\n    Date = format_datetime(TimeGenerated, 'dd.MM.yyyy HH:mm'),\n    DataSource = original_host,\n    EventId = instanceId,\n    [\"User Name\"] = user,\n    MessageDetails = Description,\n   Severity = SeverityDescription",
        "queryFrequency": "5m"
      }
    }
  ]
}
