{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/72239d5b-ef96-4f15-896f-6cdcd9c53ca7')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/72239d5b-ef96-4f15-896f-6cdcd9c53ca7')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "severity": "Informational",
        "queryFrequency": "1d",
        "tactics": [],
        "status": "Available",
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "queryPeriod": "1d",
        "triggerThreshold": 0,
        "triggerOperator": "gt",
        "query": "Veeam_GetSecurityEvents\n| where instanceId == 24140\n| project\n    Date = format_datetime(TimeGenerated, 'dd.MM.yyyy HH:mm'),\n    DataSource = original_host,\n    EventId = instanceId,\n    [\"User Name\"] = user,\n  MessageDetails = Description,\n   Severity = SeverityDescription",
        "name": "Cloud Gateway Deleted",
        "customDetails": {
          "VbrHostName": "DataSource",
          "EventId": "EventId",
          "MessageDetails": "MessageDetails",
          "Date": "Date",
          "Severity": "Severity"
        },
        "description": "Detects when a cloud gateway is deleted from Veeam Backup & Replication. This might indicate unauthorized removal of critical components."
      }
    }
  ]
}
