{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/be47e508-e35b-4c63-979b-a75b72102344')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/be47e508-e35b-4c63-979b-a75b72102344')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "triggerOperator": "gt",
        "queryFrequency": "1d",
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "status": "Available",
        "queryPeriod": "1d",
        "description": "Detects when storage settings are updated in Veeam Backup & Replication. This might indicate configuration changes that require review.",
        "customDetails": {
          "VbrHostName": "DataSource",
          "EventId": "EventId",
          "Severity": "Severity",
          "Date": "Date",
          "MessageDetails": "MessageDetails"
        },
        "triggerThreshold": 0,
        "name": "Storage Settings Updated",
        "severity": "Informational",
        "tactics": [],
        "query": "Veeam_GetSecurityEvents\n| where instanceId == 41401\n| project\n    Date = format_datetime(TimeGenerated, 'dd.MM.yyyy HH:mm'),\n    DataSource = original_host,\n    EventId = instanceId,\n    UserName = user,\n  MessageDetails = Description,\n    Severity = SeverityDescription"
      }
    }
  ]
}
