{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/e06b913f-7698-4b2c-96e6-d47a9f4f5de8')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/e06b913f-7698-4b2c-96e6-d47a9f4f5de8')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "queryFrequency": "1d",
        "customDetails": {
          "MessageDetails": "MessageDetails",
          "Date": "Date",
          "Severity": "Severity",
          "EventId": "EventId",
          "VbrHostName": "DataSource"
        },
        "tactics": [],
        "queryPeriod": "1d",
        "triggerOperator": "gt",
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "name": "Preferred Networks Deleted",
        "description": "Detects when a preferred network is deleted from Veeam Backup & Replication. This might indicate unauthorized removal of critical components.",
        "query": "Veeam_GetSecurityEvents\n| where instanceId == 32800\n| project\n    Date = format_datetime(TimeGenerated, 'dd.MM.yyyy HH:mm'),\n    DataSource = original_host,\n    EventId = instanceId,\n    [\"User Name\"] = user,\n  MessageDetails = Description,\n   Severity = SeverityDescription",
        "severity": "Informational",
        "status": "Available",
        "triggerThreshold": 0
      }
    }
  ]
}
