{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/afec0070-2b46-4366-a272-e2d9cc8a50f2')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/afec0070-2b46-4366-a272-e2d9cc8a50f2')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "severity": "High",
        "name": "Tenant Password Changed",
        "tactics": [],
        "triggerThreshold": 0,
        "status": "Available",
        "queryFrequency": "1h",
        "queryPeriod": "1h",
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "customDetails": {
          "MessageDetails": "MessageDetails",
          "EventId": "EventId",
          "Date": "Date",
          "VbrHostName": "DataSource",
          "Severity": "Severity"
        },
        "description": "Detects when a tenant password is updated.",
        "triggerOperator": "gt",
        "query": "Veeam_GetSecurityEvents\n| where instanceId == 24114\n| project\n    Date = format_datetime(TimeGenerated, 'dd.MM.yyyy HH:mm'),\n    DataSource = original_host,\n    EventId = instanceId,\n    [\"User Name\"] = user,\n  MessageDetails = Description,\n   Severity = SeverityDescription"
      }
    }
  ]
}
