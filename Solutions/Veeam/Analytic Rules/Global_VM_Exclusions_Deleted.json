{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/141d7e3c-a72b-49f7-9e64-57f60c2fa927')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/141d7e3c-a72b-49f7-9e64-57f60c2fa927')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "triggerOperator": "gt",
        "severity": "Low",
        "queryPeriod": "3h",
        "description": "Detects when a VM is removed from global exclusions in Veeam Backup & Replication. This might indicate unauthorized changes.",
        "name": "Global VM Exclusions Deleted",
        "status": "Available",
        "triggerThreshold": 0,
        "customDetails": {
          "VbrHostName": "DataSource",
          "Severity": "Severity",
          "EventId": "EventId",
          "Date": "Date",
          "MessageDetails": "MessageDetails"
        },
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "query": "Veeam_GetSecurityEvents\n| where instanceId == 40500\n| project\n    Date = format_datetime(TimeGenerated, 'dd.MM.yyyy HH:mm'),\n    DataSource = original_host,\n    EventId = instanceId,\n    UserName = user,\n  MessageDetails = Description,\n    Severity = SeverityDescription",
        "tactics": [
          "Impact"
        ],
        "queryFrequency": "3h"
      }
    }
  ]
}
