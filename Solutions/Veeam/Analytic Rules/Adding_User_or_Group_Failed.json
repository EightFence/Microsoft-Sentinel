{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/6d1a5478-e613-44f4-a48f-12cc18568522')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/6d1a5478-e613-44f4-a48f-12cc18568522')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "triggerOperator": "gt",
        "tactics": [
          "DefenseEvasion"
        ],
        "status": "Available",
        "customDetails": {
          "EventId": "EventId",
          "VbrHostName": "DataSource",
          "Date": "Date",
          "Severity": "Severity",
          "MessageDetails": "MessageDetails"
        },
        "name": "Adding User or Group Failed",
        "description": "Detects failed attempts to add a user or user group to Veeam Backup & Replication.",
        "queryPeriod": "3h",
        "queryFrequency": "3h",
        "query": "Veeam_GetSecurityEvents\n| where instanceId == 31210\n| project\n    Date = format_datetime(TimeGenerated, 'dd.MM.yyyy HH:mm'),\n    DataSource = original_host,\n    EventId = instanceId,\n    UserName = user,\n    MessageDetails = Description,\n    Severity = SeverityDescription",
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "triggerThreshold": 0,
        "severity": "Low"
      }
    }
  ]
}
