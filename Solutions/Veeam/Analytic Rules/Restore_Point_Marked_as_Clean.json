{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/c4c6cb50-9fc3-4ca9-a2df-22d527240309')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/c4c6cb50-9fc3-4ca9-a2df-22d527240309')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "triggerOperator": "gt",
        "description": "Detects when a restore point is marked as clean.",
        "tactics": [],
        "queryPeriod": "1d",
        "severity": "Informational",
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "status": "Available",
        "queryFrequency": "1d",
        "triggerThreshold": 0,
        "name": "Restore Point Marked as Clean",
        "query": "Veeam_GetSecurityEvents\n| where instanceId == 42230\n| project\n    Date = format_datetime(TimeGenerated, 'dd.MM.yyyy HH:mm'),\n    DataSource = original_host,\n    EventId = instanceId,\n    UserName = user,\n  MessageDetails = Description,\n    Severity = SeverityDescription",
        "customDetails": {
          "Date": "Date",
          "Severity": "Severity",
          "VbrHostName": "DataSource",
          "MessageDetails": "MessageDetails",
          "EventId": "EventId"
        }
      }
    }
  ]
}
