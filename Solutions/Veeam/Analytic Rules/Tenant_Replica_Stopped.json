{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/ef029652-d004-44e9-a70a-48dd71818aaa')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/ef029652-d004-44e9-a70a-48dd71818aaa')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "triggerThreshold": 0,
        "severity": "High",
        "customDetails": {
          "Severity": "Severity",
          "MessageDetails": "MessageDetails",
          "VbrHostName": "DataSource",
          "EventId": "EventId",
          "Date": "Date"
        },
        "triggerOperator": "gt",
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "tactics": [],
        "queryFrequency": "5m",
        "status": "Available",
        "description": "Detects when a tenant replica stops.",
        "query": "Veeam_GetSecurityEvents\n| where instanceId == 26900\n| project\n    Date = format_datetime(TimeGenerated, 'dd.MM.yyyy HH:mm'),\n    DataSource = original_host,\n    EventId = instanceId,\n    [\"User Name\"] = user,\n  MessageDetails = Description,\n   Severity = SeverityDescription",
        "queryPeriod": "5m",
        "name": "Tenant Replica Stopped"
      }
    }
  ]
}
