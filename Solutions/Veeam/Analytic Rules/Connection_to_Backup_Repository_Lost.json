{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/8777f9e1-db58-4078-a381-4e47a3a2ee01')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/8777f9e1-db58-4078-a381-4e47a3a2ee01')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "name": "Connection to Backup Repository Lost",
        "queryPeriod": "5m",
        "query": "Veeam_GetSecurityEvents\n| where instanceId == 21224\n| project\n    Date = format_datetime(TimeGenerated, 'dd.MM.yyyy HH:mm'),\n    DataSource = original_host,\n    EventId = instanceId,\n    [\"User Name\"] = user,\n  MessageDetails = Description,\n   Severity = SeverityDescription",
        "severity": "High",
        "tactics": [],
        "customDetails": {
          "Date": "Date",
          "Severity": "Severity",
          "MessageDetails": "MessageDetails",
          "VbrHostName": "DataSource",
          "EventId": "EventId"
        },
        "triggerThreshold": 0,
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "queryFrequency": "5m",
        "triggerOperator": "gt",
        "description": "Detects when a backup server fails to connect to a backup repository.",
        "status": "Available"
      }
    }
  ]
}
