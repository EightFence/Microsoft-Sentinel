{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/40b8e739-1077-42d8-9501-b68736c2c4d2')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/40b8e739-1077-42d8-9501-b68736c2c4d2')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "severity": "High",
        "triggerThreshold": 0,
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "description": "Detects when SSH credentials are updated.",
        "queryFrequency": "5m",
        "queryPeriod": "5m",
        "tactics": [],
        "status": "Available",
        "customDetails": {
          "Date": "Date",
          "VbrHostName": "DataSource",
          "Severity": "Severity",
          "EventId": "EventId",
          "MessageDetails": "MessageDetails"
        },
        "query": "Veeam_GetSecurityEvents\n| where instanceId == 31900\n| extend RelatedCredsName = extract(\"RelatedCredsName=\\\"([^\\\"]*)\\\"\", 1, SyslogMessage)\n| project\n    Date = format_datetime(TimeGenerated, 'dd.MM.yyyy HH:mm'),\n    DataSource = original_host,\n    EventId = instanceId,\n    [\"User Name\"] = user,\n    [\"Credential Record\"] = RelatedCredsName,\n    MessageDetails = Description,\n   Severity = SeverityDescription",
        "triggerOperator": "gt",
        "name": "SSH Credentials Changed"
      }
    }
  ]
}
