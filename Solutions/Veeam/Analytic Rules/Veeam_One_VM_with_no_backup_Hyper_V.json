{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/ae880194-5766-46d3-a17b-c8c53e9ca96c')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/ae880194-5766-46d3-a17b-c8c53e9ca96c')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "tactics": [
          "Impact"
        ],
        "status": "Available",
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "triggerThreshold": 0,
        "severity": "High",
        "description": "Detects Veeam ONE VMs with no backup (Hyper-V).",
        "queryPeriod": "5m",
        "customDetails": {
          "Comment": "Comment",
          "Name": "Name",
          "ObjectType": "ObjectType",
          "TriggeredAlarmId": "TriggeredAlarmId",
          "TriggeredTime": "TriggeredTime",
          "ObjectName": "ObjectName",
          "VoneHostName": "VoneHostName",
          "Status": "Status",
          "ObjectId": "ObjectId",
          "Description": "Description",
          "PredefinedAlarmId": "PredefinedAlarmId"
        },
        "name": "Veeam ONE VM with No Backup (Hyper-V)",
        "triggerOperator": "gt",
        "query": "VeeamOneTriggeredAlarms_CL | where PredefinedAlarmId == 315",
        "queryFrequency": "5m"
      }
    }
  ]
}
