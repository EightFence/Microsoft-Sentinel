{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/18833d01-703a-438d-8ac6-84faa82e9b52')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/18833d01-703a-438d-8ac6-84faa82e9b52')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "status": "Available",
        "severity": "Medium",
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "customDetails": {
          "MessageDetails": "MessageDetails",
          "EventId": "EventId",
          "Date": "Date",
          "DataSource": "DataSource"
        },
        "triggerThreshold": 0,
        "name": "Configuration Backup Job Failed",
        "tactics": [
          "DefenseEvasion",
          "Impact"
        ],
        "query": "Veeam_GetFinishedConfigurationBackupSessions\r\n| where Result == \"Failed\"\r\n| project\r\n    Date = format_datetime(TimeGenerated, 'dd.MM.yyyy HH:mm'),\r\n    DataSource = Computer,\r\n    EventId = instanceId,\r\n    UserName = user,\r\n    [\"State\"] = Result,\r\n     MessageDetails = Description",
        "triggerOperator": "gt",
        "description": "Detects failed configuration backup operations. This might indicate system or storage issues, or a potential sabotage of the backup infrastructure.",
        "queryFrequency": "3h",
        "queryPeriod": "3h"
      }
    }
  ]
}
