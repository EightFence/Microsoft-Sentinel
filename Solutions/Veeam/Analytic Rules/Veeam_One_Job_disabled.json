{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/1a9e31d6-2116-4ff1-8ee7-abc957c34350')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/1a9e31d6-2116-4ff1-8ee7-abc957c34350')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "triggerThreshold": 0,
        "description": "Detects when a Veeam ONE job is disabled.",
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "queryPeriod": "3h",
        "triggerOperator": "gt",
        "queryFrequency": "3h",
        "customDetails": {
          "ObjectId": "ObjectId",
          "TriggeredAlarmId": "TriggeredAlarmId",
          "PredefinedAlarmId": "PredefinedAlarmId",
          "TriggeredTime": "TriggeredTime",
          "ObjectType": "ObjectType",
          "ObjectName": "ObjectName",
          "Comment": "Comment",
          "Description": "Description",
          "VoneHostName": "VoneHostName",
          "Name": "Name",
          "Status": "Status"
        },
        "tactics": [],
        "name": "Veeam ONE Job Disabled",
        "status": "Available",
        "query": "VeeamOneTriggeredAlarms_CL | where PredefinedAlarmId == 316",
        "severity": "Medium"
      }
    }
  ]
}
