{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/c9faf1ee-57dd-4f54-8cd1-fcf35a1aa424')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/c9faf1ee-57dd-4f54-8cd1-fcf35a1aa424')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "severity": "High",
        "triggerThreshold": 0,
        "name": "Global VM Exclusions Added",
        "queryPeriod": "5m",
        "tactics": [],
        "customDetails": {
          "Severity": "Severity",
          "Date": "Date",
          "VbrHostName": "DataSource",
          "MessageDetails": "MessageDetails",
          "EventId": "EventId"
        },
        "description": "Detects when global VM exclusion are added in Veeam Backup & Replication.",
        "triggerOperator": "gt",
        "status": "Available",
        "queryFrequency": "5m",
        "query": "Veeam_GetSecurityEvents\n| where instanceId == 40400\n| project\n    Date = format_datetime(TimeGenerated, 'dd.MM.yyyy HH:mm'),\n    DataSource = original_host,\n    EventId = instanceId,\n    [\"User Name\"] = user,\n  MessageDetails = Description,\n   Severity = SeverityDescription",
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        }
      }
    }
  ]
}
