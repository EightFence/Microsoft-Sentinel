{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/d48f9671-adc0-45e5-a477-670ef38bc132')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/d48f9671-adc0-45e5-a477-670ef38bc132')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "status": "Available",
        "name": "Veeam ONE Possible Ransomware Activity (Hyper-V)",
        "triggerThreshold": 0,
        "tactics": [],
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "queryPeriod": "5m",
        "triggerOperator": "gt",
        "severity": "High",
        "queryFrequency": "5m",
        "customDetails": {
          "ObjectName": "ObjectName",
          "ObjectType": "ObjectType",
          "Name": "Name",
          "VoneHostName": "VoneHostName",
          "TriggeredTime": "TriggeredTime",
          "ObjectId": "ObjectId",
          "TriggeredAlarmId": "TriggeredAlarmId",
          "Status": "Status",
          "PredefinedAlarmId": "PredefinedAlarmId",
          "Description": "Description",
          "Comment": "Comment"
        },
        "query": "VeeamOneTriggeredAlarms_CL | where PredefinedAlarmId == 344",
        "description": "Detects Veeam ONE possible ransomware activity alerts for Microsoft Hyper-V."
      }
    }
  ]
}
