{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/4d8f5244-cb56-4e95-ba65-0a7bec114a13')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/4d8f5244-cb56-4e95-ba65-0a7bec114a13')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "severity": "Medium",
        "status": "Available",
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        },
        "customDetails": {
          "Date": "Date",
          "VbrHostName": "DataSource",
          "Severity": "Severity",
          "MessageDetails": "MessageDetails",
          "EventId": "EventId"
        },
        "description": "Detects when a multi-factor authentication token is revoked.",
        "triggerThreshold": 0,
        "queryFrequency": "1h",
        "query": "Veeam_GetSecurityEvents\n| where instanceId == 40202\n| project\n    Date = format_datetime(TimeGenerated, 'dd.MM.yyyy HH:mm'),\n    DataSource = original_host,\n    EventId = instanceId,\n    UserName = user,\n  MessageDetails = Description,\n    Severity = SeverityDescription",
        "triggerOperator": "gt",
        "tactics": [],
        "queryPeriod": "1h",
        "name": "Multi-Factor Authentication Token Revoked"
      }
    }
  ]
}
