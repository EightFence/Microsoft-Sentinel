{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/35fb4771-9b8f-47f7-bd5b-3085d584f7ce')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/35fb4771-9b8f-47f7-bd5b-3085d584f7ce')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "triggerThreshold": 0,
        "triggerOperator": "gt",
        "customDetails": {
          "EventId": "EventId",
          "Date": "Date",
          "VbrHostName": "DataSource",
          "MessageDetails": "MessageDetails",
          "Severity": "Severity"
        },
        "queryPeriod": "1d",
        "description": "Detects when service provider settings are updated in Veeam Backup & Replication.",
        "severity": "Informational",
        "tactics": [],
        "query": "Veeam_GetSecurityEvents\n| where instanceId == 27500\n| project\n    Date = format_datetime(TimeGenerated, 'dd.MM.yyyy HH:mm'),\n    DataSource = original_host,\n    EventId = instanceId,\n    UserName = user,\n  MessageDetails = Description,\n    Severity = SeverityDescription",
        "status": "Available",
        "queryFrequency": "1d",
        "name": "Service Provider Updated",
        "eventGroupingSettings": {
          "aggregationKind": "AlertPerResult"
        }
      }
    }
  ]
}
