{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/72264f4f-61fb-4f4f-96c4-635571a376c2')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/72264f4f-61fb-4f4f-96c4-635571a376c2')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "queryPeriod": "15m",
        "name": "Mimecast Secure Email Gateway - Attachment Protect",
        "suppressionDuration": "5h",
        "enabled": true,
        "suppressionEnabled": false,
        "tactics": [
          "Collection",
          "Exfiltration",
          "Discovery",
          "InitialAccess",
          "Execution"
        ],
        "triggerThreshold": 0,
        "queryFrequency": "5m",
        "severity": "High",
        "customDetails": {
          "MsgId": "MsgId_s",
          "sha256": "sha256_s",
          "fileName": "fileName_s"
        },
        "entityMappings": [
          {
            "entityType": "MailMessage",
            "fieldMappings": [
              {
                "identifier": "Sender",
                "columnName": "Sender_s"
              },
              {
                "identifier": "Recipient",
                "columnName": "Recipient_s"
              },
              {
                "identifier": "Subject",
                "columnName": "Subject_s"
              }
            ]
          },
          {
            "entityType": "IP",
            "fieldMappings": [
              {
                "identifier": "Address",
                "columnName": "IP_s"
              }
            ]
          }
        ],
        "triggerOperator": "gt",
        "incidentConfiguration": {
          "createIncident": true,
          "groupingConfiguration": {
            "matchingMethod": "AllEntities",
            "reopenClosedIncident": false,
            "enabled": true,
            "lookbackDuration": "1d"
          }
        },
        "query": "MimecastSIEM_CL| where mimecastEventId_s==\"mail_ttp_attachment\"",
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "description": "Detect threat for mail attachment under the targeted threat protection"
      }
    }
  ]
}
