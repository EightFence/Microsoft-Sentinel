{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/72264f4f-61fb-4f4f-96c4-635571a376c2')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/72264f4f-61fb-4f4f-96c4-635571a376c2')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "customDetails": {
          "fileName": "fileName_s",
          "MsgId": "MsgId_s",
          "sha256": "sha256_s"
        },
        "triggerThreshold": 0,
        "queryPeriod": "15m",
        "incidentConfiguration": {
          "createIncident": true,
          "groupingConfiguration": {
            "enabled": true,
            "lookbackDuration": "1d",
            "reopenClosedIncident": false,
            "matchingMethod": "AllEntities"
          }
        },
        "name": "Mimecast Secure Email Gateway - Attachment Protect",
        "tactics": [
          "Collection",
          "Exfiltration",
          "Discovery",
          "InitialAccess",
          "Execution"
        ],
        "queryFrequency": "5m",
        "entityMappings": [
          {
            "fieldMappings": [
              {
                "columnName": "Sender_s",
                "identifier": "Sender"
              },
              {
                "columnName": "Recipient_s",
                "identifier": "Recipient"
              },
              {
                "columnName": "Subject_s",
                "identifier": "Subject"
              }
            ],
            "entityType": "MailMessage"
          },
          {
            "fieldMappings": [
              {
                "columnName": "IP_s",
                "identifier": "Address"
              }
            ],
            "entityType": "IP"
          }
        ],
        "triggerOperator": "gt",
        "suppressionEnabled": false,
        "suppressionDuration": "5h",
        "query": "MimecastSIEM_CL| where mimecastEventId_s==\"mail_ttp_attachment\"",
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "enabled": true,
        "severity": "High",
        "description": "Detect threat for mail attachment under the targeted threat protection"
      }
    }
  ]
}
