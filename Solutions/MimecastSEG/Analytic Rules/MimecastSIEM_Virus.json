{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/30f73baa-602c-4373-8f02-04ff5e51fc7f')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/30f73baa-602c-4373-8f02-04ff5e51fc7f')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "suppressionEnabled": false,
        "enabled": true,
        "triggerThreshold": 0,
        "entityMappings": [
          {
            "entityType": "MailMessage",
            "fieldMappings": [
              {
                "identifier": "Sender",
                "columnName": "Sender_s"
              },
              {
                "identifier": "Recipient",
                "columnName": "Rcpt_s"
              },
              {
                "identifier": "Subject",
                "columnName": "Subject_s"
              }
            ]
          }
        ],
        "name": "Mimecast Secure Email Gateway - Virus",
        "queryPeriod": "15m",
        "description": "Detect threat for virus from mail receipt virus event",
        "alertDetailsOverride": null,
        "incidentConfiguration": {
          "groupingConfiguration": {
            "matchingMethod": "AllEntities",
            "enabled": true,
            "lookbackDuration": "1d",
            "reopenClosedIncident": false
          },
          "createIncident": true
        },
        "queryFrequency": "5m",
        "tactics": [
          "Execution"
        ],
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "suppressionDuration": "5h",
        "query": "MimecastSIEM_CL| where mimecastEventId_s==\"mail_receipt_virus\"",
        "triggerOperator": "gt",
        "customDetails": {
          "RejType": "RejType_s",
          "IP": "IP_s",
          "MsgId_s": "MsgId_s",
          "TlsVer": "TlsVer_s",
          "Dir": "Dir_s",
          "Virus": "Virus_s",
          "headerFrom": "headerFrom_s",
          "Cphr": "Cphr_s",
          "RejInfo": "RejInfo_s",
          "RejCode": "RejCode_s",
          "Error": "Error_s",
          "Act": "Act_s"
        },
        "severity": "Informational"
      }
    }
  ]
}
