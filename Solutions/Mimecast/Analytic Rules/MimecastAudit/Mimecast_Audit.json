{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/f00197ab-491f-41e7-9e22-a7003a4c1e54')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/f00197ab-491f-41e7-9e22-a7003a4c1e54')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "name": "Mimecast Audit - Logon Authentication Failed",
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "triggerThreshold": 3,
        "enabled": true,
        "triggerOperator": "gt",
        "severity": "High",
        "entityMappings": [
          {
            "entityType": "IP",
            "fieldMappings": [
              {
                "columnName": "SourceIp",
                "identifier": "Address"
              }
            ]
          },
          {
            "entityType": "Mailbox",
            "fieldMappings": [
              {
                "columnName": "User",
                "identifier": "MailboxPrimaryAddress"
              }
            ]
          },
          {
            "entityType": "CloudApplication",
            "fieldMappings": [
              {
                "columnName": "Application",
                "identifier": "AppId"
              }
            ]
          }
        ],
        "customDetails": null,
        "suppressionDuration": "5h",
        "alertRuleTemplateName": null,
        "suppressionEnabled": false,
        "query": "MimecastAudit \n| where ['Source IP'] !=\"\" and ['Audit Type'] == \"Logon Authentication Failed\"\n| extend   SourceIp = ['Source IP'] \n",
        "queryFrequency": "30m",
        "displayName": "Mimecast Audit - Logon Authentication Failed",
        "incidentConfiguration": {
          "createIncident": true,
          "groupingConfiguration": {
            "enabled": true,
            "matchingMethod": "AllEntities",
            "reopenClosedIncident": false,
            "lookbackDuration": "P7D"
          }
        },
        "alertDetailsOverride": null,
        "tactics": [
          "Discovery",
          "InitialAccess",
          "CredentialAccess"
        ],
        "queryPeriod": "30m",
        "description": "Detects threat when logon authentication failure found in audit"
      }
    }
  ]
}
