{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "Parameters": {
    "Workspace": {
      "type": "string"
    }
  },
  "resources": [
    {
      "id": "[concat(resourceId('Microsoft.OperationalInsights/workspaces/providers', parameters('workspace'), 'Microsoft.SecurityInsights'),'/alertRules/9c5dcd76-9f6d-42a3-b984-314b52678f20')]",
      "name": "[concat(parameters('workspace'),'/Microsoft.SecurityInsights/9c5dcd76-9f6d-42a3-b984-314b52678f20')]",
      "type": "Microsoft.OperationalInsights/workspaces/providers/alertRules",
      "kind": "Scheduled",
      "apiVersion": "2021-03-01-preview",
      "properties": {
        "description": "Detects threat when logon authentication failure found in audit",
        "triggerOperator": "gt",
        "name": "Mimecast Audit - Logon Authentication Failed",
        "eventGroupingSettings": {
          "aggregationKind": "SingleAlert"
        },
        "displayName": "Mimecast Audit - Logon Authentication Failed",
        "triggerThreshold": 3,
        "severity": "High",
        "suppressionDuration": "5h",
        "alertRuleTemplateName": null,
        "entityMappings": [
          {
            "entityType": "IP",
            "fieldMappings": [
              {
                "columnName": "src_s",
                "identifier": "Address"
              }
            ]
          },
          {
            "entityType": "Mailbox",
            "fieldMappings": [
              {
                "columnName": "user_s",
                "identifier": "MailboxPrimaryAddress"
              }
            ]
          },
          {
            "entityType": "CloudApplication",
            "fieldMappings": [
              {
                "columnName": "app_s",
                "identifier": "AppId"
              }
            ]
          }
        ],
        "incidentConfiguration": {
          "createIncident": true,
          "groupingConfiguration": {
            "enabled": true,
            "matchingMethod": "AllEntities",
            "reopenClosedIncident": false,
            "lookbackDuration": "1d"
          }
        },
        "apiVersion": "2021-09-01-preview",
        "queryPeriod": "15m",
        "alertDetailsOverride": null,
        "tactics": [
          "Discovery",
          "InitialAccess",
          "CredentialAccess"
        ],
        "queryFrequency": "5m",
        "enabled": true,
        "suppressionEnabled": false,
        "customDetails": null,
        "query": "MimecastAudit_CL | where src_s !=\"\" and auditType_s == \"Logon Authentication Failed\""
      }
    }
  ]
}
